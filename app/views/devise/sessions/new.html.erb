<div class="signup-form-container">
  <h2 class="section-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="entry-form-container">
      <div class="form-field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field">
          <%= f.check_box :remember_me, class: "form-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-field actions">
        <%= f.submit "Log in", class: "form-submit" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
